@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Pi Levels</PageTitle>

<HeadContent>
    <script src="https://res.cdn.office.net/teams-js/2.19.0/js/MicrosoftTeams.min.js"></script>
</HeadContent>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h6">PI Levels</MudText>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("microsoftTeams.app.initialize");
        }
    }
}
