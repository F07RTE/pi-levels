@page "/"
@rendermode InteractiveServer
@using PiLevels.Services.Skill
@using MudBlazor
@inject SkillService SkillService
@inject NavigationManager Navigation

<PageTitle>PI Levels - English Skill</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    @if (_skill == null)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <MudPaper Elevation="0" Class="pa-4">
            <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-4">@_skill.Name Skill Progression</MudText>
            
            <MudGrid Justify="Justify.Center" Spacing="2">
                @foreach (var level in _skill.Levels.OrderBy(l => l.LevelNumber))
                {
                    <MudItem xs="4" sm="2">
                        <MudPaper Elevation="2" 
                                 Class="pa-2" 
                                 Style="background-color: var(--mud-palette-background-grey); cursor: pointer;"
                                 @onclick="() => NavigateToLevel(level.LevelNumber)">
                            <MudStack AlignItems="AlignItems.Center" Spacing="0">
                                <MudImage Src="@($"resources/{level.Icon}")" 
                                         Alt="@level.Name" 
                                         Width="64" 
                                         Height="64" 
                                         Class="ma-2" 
                                         ObjectFit="ObjectFit.Cover" />

                                <MudText Typo="Typo.subtitle2" Align="Align.Center">@level.Name</MudText>
                                <MudText Typo="Typo.caption" Align="Align.Center" Class="mud-text-secondary">
                                    @($"{level.Resources.Count} resources")
                                </MudText>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                }
            </MudGrid>
        </MudPaper>
    }
</MudContainer>

@code {
    private Models.Skill? _skill;

    protected override async Task OnInitializedAsync()
    {
        _skill = await SkillService.GetEnglishSkillAsync();
    }

    private void NavigateToLevel(int levelNumber)
    {
        Navigation.NavigateTo($"/level/{levelNumber}");
    }
}
